#include<stdio.h>
#include<string.h>

void f1(){
    char str[50];
    printf("Enter the string : ");
    fgets(str,50,stdin);
    str[strlen(str)-1] = 0;
    int i ;
    for(i = 0 ; str[i] ; i++ );
    printf("length of %s is %d",str,i);
}

void f2(){
    char str[50];
    printf("Enter the string : ");
    fgets(str,50,stdin);
    str[strlen(str)-1] = 0;
    int cnt = 0;
    char ch;
    printf("Enter the string of which occurence you need to find : ");
    scanf("%c",&ch);
    for(int i = 0 ; str[i] ; i++){
        if(str[i] == ch) cnt++;
    }
    printf("%d",cnt);
}

void f3(){
    char str[50];
    char str1[]="aieouAIEOU";
    printf("Enter the string : ");
    fgets(str,50,stdin);
    str[strlen(str)-1] = 0;
    int cnt = 0;
    for(int i = 0 ; str[i] ; i++){
        for(int j = 0 ; str1[j] ; j++)
            if(str[i] == str1[j]) cnt++;
    }
    printf("%d",cnt);
}

void f4(){
    char str[50];
    printf("Enter the string : ");
    fgets(str,50,stdin);
    str[strlen(str)-1] = 0;
    int cnt = 0;
    char ch =' ';
    for(int i = 0 ; str[i] ; i++){
        if(str[i] == ch) cnt++;
    }
    printf("%d",cnt);
}

void f5(){
    char str[50];
    printf("Enter the string : ");
    fgets(str,50,stdin);
    str[strlen(str)-1] = 0;
    for(int i = 0 ; str[i] ; i++){
        if(str[i] >= 'a' && str[i] <= 'z') str[i] -= 32 ;
    }
    printf("%s",str);
}

void f2(){
    char str[50];
    printf("Enter the string : ");
    fgets(str,50,stdin);
    str[strlen(str)-1] = '\0';
    int l = strlen(str);
    for(int i = 0 ; i < l/2 ; i++){
        char a = str[i];
        str[i] = str[l-i-1];
        str[l-i-1] = a;
    }
    printf("%s",str);
}

void f3(){
    char str[50];
    printf("Enter the String : ");
    fgets(str,50,stdin);
    str[strlen(str)-1] = 0;
    int aplhacnt = 0,digitcnt = 0,specialchar = 0;
    for(int i = 0 ; str[i] ; i++){
        if((str[i] >= 'a' && str[i] <= 'z') || (str[i] >= 'A' && str[i] <= 'Z') ) aplhacnt++;
        else if(str[i] >= '0' && str[i] <= '9') digitcnt++;
        else specialchar++;
    }
    printf("%d\n",aplhacnt);
    printf("%d\n",digitcnt);
    printf("%d",specialchar);
}

void f4()
{
    char str[50],dup[50];
    int i;
    printf("Enter a string");
    fgets(str,50,stdin);
    str[strlen(str)-1]='\0';
    for(i=0;str[i];i++)
        dup[i]=str[i];
    dup[i]='\0';
    printf("%s",dup);
}
int f5(char str[],char ch)
{
    int i;
    for(i=0;str[i];i++)
        if(str[i]==ch)
            return i;
    return -1;
}

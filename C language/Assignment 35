#include<stdio.h>
#include<string.h>
//str[strcspn(str, "\n")] = '\0';
void f1(){
    char str[50];
    printf("Enter the string : ");
    fgets(str,50,stdin);
    str[strlen(str)-1] = 0;
    for(int i = 0 ; str[i] ;i++){
        if(str[i] >= 'A' && str[i] <= 'Z'){
            str[i] +=  32;
        }
    }
    printf("%s",str);
}


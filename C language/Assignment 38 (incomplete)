#include<stdio.h>
#include<string.h>

int checkpalindrome(char str[]){
    int l = strlen(str);
    for(int i = 0 ; i < l/2 ; i++){
        if(str[i] != str[l-1-i]) return 0;
    }
    return 1;
}

void remleadspace(char str[]){
    int i = 0;
    for(i = 0 ; str[i] ; i++){
        if(str[i] != ' '){
            break;
        }
    }
    int j;
    for(j = strlen(str)-1; j > 0 ; j--){
        if(str[j] != ' ') {
            break;
        }
    }
    int k ;
    for(k = 0 ; k <= j-i ; k++ ){
        str[k] = str[i++];
    }
    str[k] = 0; 
}

int cntword(char str[]){
    int cnt = 0;
    for(int i = 0; str[i] ; i++){
        if(str[i] == ' ') cnt++;
    }
    return cnt+1;
}



int main (){
    char str[50];
    printf("Enter the string : ");
    fgets(str,50,stdin);
    str[strlen(str)-1] = 0;
    printf("%s",str);
    return 0;
}

